      <!-- Rewards -->
      <div class="bg-silksong-dark/50 rounded-lg p-6 mb-8">
        <h3 class="text-xl font-semibold mb-4 text-silksong-gold">Victory Rewards</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
          <div class="text-center">
