      <!-- Playstyle Recommendations -->
      <section class="mb-16">
        <h2 class="text-3xl font-display font-bold mb-8 text-center">
          <span class="gradient-text">Playstyle Recommendations</span>
        </h2>
        <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
          <div class="bg-gray-800/30 backdrop-blur-sm rounded-lg p-8 border border-green-500/20">
            <h3 class="text-2xl font-bold text-green-400 mb-6">By Game Stage</h3>
            <div class="space-y-6">
              <div>
                <h4 class="text-lg font-semibold text-green-300 mb-3">Early Game</h4>
                <div class="flex items-center mb-2">
                  <img src="/images/crests/wanderer_crest_small.avif" alt="Wanderer Crest" class="w-8 h-8 rounded mr-3" />
                  <span class="text-white font-semibold">Wanderer Crest</span>
                </div>
