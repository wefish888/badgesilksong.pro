---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = "All Tools - Complete Database | Silksong Tools";
const description = "Browse the complete collection of tools and equipment in Hollow Knight: Silksong. Detailed guides for every weapon, defensive tool, and utility item.";
const keywords = "Silksong tools list, all tools, equipment database, complete tool guide, Silksong weapons";
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-gradient-to-br from-gray-900 via-blue-900 to-gray-800">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-repeat" style="background-image: url('/images/ui/tool-grid-pattern.svg'); background-size: 200px 200px;"></div>
    </div>

    <div class="relative z-10 container mx-auto px-4 py-12">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-display font-bold mb-6">
          <span class="gradient-text">Complete Tools Database</span>
        </h1>
        <p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto">
          Explore every tool and piece of equipment available in Hollow Knight: Silksong. Click on any tool for detailed strategies, usage guides, and upgrade information.
        </p>

        <!-- Quick Navigation -->
        <div class="flex flex-wrap justify-center gap-4 mb-8">
          <a href="#red-tools" class="bg-red-600/20 hover:bg-red-600/30 px-4 py-2 rounded-lg border border-red-500/30 transition-colors">
            Red Tools (Offensive)
          </a>
          <a href="#blue-tools" class="bg-blue-600/20 hover:bg-blue-600/30 px-4 py-2 rounded-lg border border-blue-500/30 transition-colors">
            Blue Tools (Defensive)
          </a>
          <a href="#yellow-tools" class="bg-yellow-600/20 hover:bg-yellow-600/30 px-4 py-2 rounded-lg border border-yellow-500/30 transition-colors">
            Yellow Tools (Utility)
          </a>
