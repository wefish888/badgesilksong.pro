---
// Navigation component for the site header
---

<nav class="bg-silksong-dark/90 backdrop-blur-sm border-b border-gray-700 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo and Brand -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3">
          <div class="w-8 h-8 bg-gradient-to-br from-silksong-blue to-silksong-purple rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-sm">SB</span>
          </div>
          <div class="hidden sm:block">
            <h1 class="text-xl font-display font-bold gradient-text">
              Silksong Badge Hub
            </h1>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation Links -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <a href="/" class="nav-link">Home</a>
          <a href="/badges" class="nav-link">Badge Collection</a>
          <a href="/guides" class="nav-link">Guides</a>
          <a href="/achievements" class="nav-link">Achievements</a>
          <a href="/troubleshooting" class="nav-link">Troubleshooting</a>
          <a href="/checklist" class="nav-link">Checklist</a>
        </div>
      </div>

      <!-- Search Bar -->
      <div class="hidden lg:block">
        <div class="relative">
          <input
            type="text"
            placeholder="Search badges, guides..."
            class="search-box w-64 pl-10"
            id="search-input"
          />
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="bg-silksong-dark inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white"
          aria-controls="mobile-menu"
          aria-expanded="false"
          id="mobile-menu-button"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-silksong-dark border-t border-gray-700">
      <a href="/" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Home</a>
      <a href="/badges" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Badge Collection</a>
      <a href="/guides" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Guides</a>
      <a href="/achievements" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Achievements</a>
      <a href="/troubleshooting" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Troubleshooting</a>
      <a href="/checklist" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Checklist</a>

      <!-- Mobile Search -->
      <div class="px-3 py-2">
        <input
          type="text"
          placeholder="Search badges, guides..."
          class="search-box w-full"
        />
      </div>
    </div>
  </div>
</nav>

<script is:inline>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        mobileMenuButton.setAttribute('aria-expanded', (!isExpanded).toString());
        mobileMenu.classList.toggle('hidden');
      });
    }

    // Simple search functionality
    const searchInputs = document.querySelectorAll('#search-input, input[placeholder="Search badges, guides..."]');
    searchInputs.forEach(input => {
      input.addEventListener('keypress', function(e) {
        if (e.key === 'Enter' && e.target) {
          const query = e.target.value.trim();
          if (query) {
            // Simple search redirect - in a real app this would be more sophisticated
            window.location.href = `/search?q=${encodeURIComponent(query)}`;
          }
        }
      });
    });
  });
</script>